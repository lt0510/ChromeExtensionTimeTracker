{
    "name" : "Time Tracker",
    "version": "1.0",
    "description": "A chrome extension to help users manage and analyze their productivity.",
    "permissions":["activeTab", "declarativeContent","storage", "tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons":{
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png"
        }
    },
    "options_page": "options.html",
   
    "manifest_version":2
}
